$(document).ready(function() {
  $('.nav-item').on('mousedown', function(event) {
    var $clickedLink = $(this).find('a.nav-link');
    $('.nav-item').removeClass('active');
    $clickedLink.addClass('active');
    
    // Store the active link information in local storage
    localStorage.setItem('activeLink', $clickedLink.attr('href'));
  });

  // Apply the active class on page load
  var activeLink = localStorage.getItem('activeLink');
  if (activeLink) {
    $('.nav-item').removeClass('active');
    $('a.nav-link[href="' + activeLink + '"]').parent('.nav-item').addClass('active');
  }
});


</script>  
